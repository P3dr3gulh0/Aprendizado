programa {
  funcao inicio() {
    real n1, n2

    escreva("Para começarmos a brincadeira primeiro digite um numero: ")
    leia(n1)

    escreva("Agora mais um: ")
    leia(n2)

    escreva("A soma desses numeros é: ", n1+n2, "\n")
    escreva("A subtração é: ", n1-n2, "\n")
    escreva("A multiplicação: ",n1*n2, "\n")
    escreva("A divisão é: ", n1/n2, "\n")
  }
}
